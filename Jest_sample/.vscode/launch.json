{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest",
            "args": [
              "${fileBasename}", // https://code.visualstudio.com/docs/editor/variables-reference
              "--forceExit",
              "--verbose",
              "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test all",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest",
            "args": [
              "--forceExit",
              "--verbose",
              "--runInBand"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "coverage",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest",
            "args": [
              "--forceExit",
              "--verbose",
              "--coverage"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}